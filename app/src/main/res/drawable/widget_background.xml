<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Dark gradient with opacity for visibility -->
    <gradient
        android:type="linear"
        android:angle="135"
        android:startColor="#DD162036"
        android:centerColor="#DD121721"
        android:endColor="#DD080A10" />

    <!-- Glowing border effect -->
    <stroke
        android:width="1.5dp"
        android:color="#708E44EC" />

    <corners android:radius="12dp" />
</shape>